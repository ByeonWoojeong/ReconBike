<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="app.cosmos.reconbike.MyPageActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#212121"
        >

        <ImageView
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:id="@+id/back"
            android:background="@drawable/back_white"
            />

        <TextView
            android:layout_gravity="center_vertical|center_horizontal"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="마이페이지"
            app:font="Custom1"
            />

        <ImageView
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="7dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/setting"
            android:background="@drawable/setting"
            />

    </FrameLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="#212121"
        >

        <LinearLayout
            android:layout_marginLeft="19dp"
            android:layout_gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:id="@+id/id"
                app:font="Custom6"
                />

            <app.cosmos.reconbike.NPTextView
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#80ffffff"
                android:textSize="15sp"
                android:id="@+id/phone"
                app:font="Custom4"
                />

        </LinearLayout>

        <ImageView
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="28dp"
            android:layout_marginRight="19dp"
            android:layout_width="47dp"
            android:layout_height="25dp"
            android:id="@+id/update"
            android:background="@drawable/update"
            />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="#f4f4f4"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:id="@+id/billing_con"
                android:background="#ffffff"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_marginLeft="19dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"
                            android:includeFontPadding="false"
                            android:letterSpacing="-0.05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#f41758"
                            android:textSize="14sp"
                            android:text="정액제 상품"
                            android:id="@+id/billing_title1"
                            app:font="Custom1"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#f41758"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="3dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:text="결제하시면 서비스 이용이 가능합니다."
                        android:id="@+id/billing_title2"
                        app:font="Custom1"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="4dp"
                    android:layout_width="25dp"
                    android:layout_height="41dp"
                    android:id="@+id/billing1"
                    android:background="@drawable/my_page_next"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:id="@+id/expiry_date_con"
                android:background="#ffffff"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:text="남은기간"
                        android:id="@+id/expiry_date_title1"
                        app:font="Custom2"
                        />

                    <TextView
                        android:layout_marginLeft="9dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f41758"
                        android:textSize="24sp"
                        android:text=""
                        android:id="@+id/expiry_date"
                        app:font="Custom4"
                        />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:text="일"
                        android:id="@+id/expiry_date_title2"
                        app:font="Custom2"
                        />

                </LinearLayout>

                <TextView
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="30dp"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:text="연장하기"
                    android:id="@+id/expiry_date_title3"
                    app:font="Custom1"
                    />

                <ImageView
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="4dp"
                    android:layout_width="25dp"
                    android:layout_height="42dp"
                    android:id="@+id/billing2"
                    android:background="@drawable/my_page_next"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        android:id="@+id/menu1_con"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_marginTop="26dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="32dp"
                            android:layout_height="31dp"
                            android:id="@+id/menu1"
                            android:background="@drawable/my_page_menu1"
                            />

                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_gravity="center_horizontal"
                            android:includeFontPadding="false"
                            android:letterSpacing="-0.05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:textSize="12sp"
                            android:text="대여이력"
                            android:id="@+id/menu1_text"
                            app:font="Custom2"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        android:id="@+id/menu2_con"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_marginTop="21dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="27dp"
                            android:layout_height="34dp"
                            android:id="@+id/menu2"
                            android:background="@drawable/my_page_menu2"
                            />

                        <TextView
                            android:layout_marginTop="9dp"
                            android:layout_gravity="center_horizontal"
                            android:includeFontPadding="false"
                            android:letterSpacing="-0.05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:textSize="12sp"
                            android:text="고장 및 불편 신고"
                            android:id="@+id/menu2_text"
                            app:font="Custom2"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        android:id="@+id/menu3_con"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_marginTop="29dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="45dp"
                            android:layout_height="25dp"
                            android:id="@+id/menu3"
                            android:background="@drawable/my_page_menu3"
                            />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:includeFontPadding="false"
                            android:letterSpacing="-0.05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:textSize="12sp"
                            android:text="공지사항 및 이벤트"
                            android:id="@+id/menu3_text"
                            app:font="Custom2"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        android:id="@+id/menu4_con"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_marginTop="12dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="30dp"
                            android:layout_height="26dp"
                            android:id="@+id/menu4"
                            android:background="@drawable/my_page_menu4"
                            />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"
                            android:includeFontPadding="false"
                            android:letterSpacing="-0.05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:textSize="12sp"
                            android:text="자주 묻는 질문"
                            android:id="@+id/menu4_text"
                            app:font="Custom2"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        android:id="@+id/menu5_con"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_marginTop="13dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="36dp"
                            android:layout_height="25dp"
                            android:id="@+id/menu5"
                            android:background="@drawable/my_page_menu5"
                            />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"
                            android:includeFontPadding="false"
                            android:letterSpacing="-0.05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#212121"
                            android:textSize="12sp"
                            android:text="이용 가이드"
                            android:id="@+id/menu5_text"
                            app:font="Custom2"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_weight="1"
                        />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:id="@+id/call_con_con"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:orientation="horizontal"
                    android:id="@+id/call_con"
                    >

                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="23dp"
                        android:layout_height="18dp"
                        android:background="@drawable/my_page_service"
                        android:id="@+id/call"
                        />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:text="고객센터"
                        android:id="@+id/call_text"
                        app:font="Custom1"
                        />

                </LinearLayout>

                <View
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#cecece"
                    />

                <app.cosmos.reconbike.NPTextView
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="18dp"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:text="1234-5678"
                    app:font="Custom4"
                    />

                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <app.cosmos.reconbike.NPTextView
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:text="평일"
                        app:font="Custom2"
                        />

                    <app.cosmos.reconbike.NPTextView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:text="09:00 ~ 18:00"
                        app:font="Custom4"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="21dp"
                    android:layout_marginLeft="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <app.cosmos.reconbike.NPTextView
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff9415"
                        android:textSize="14sp"
                        android:text="주말"
                        app:font="Custom2"
                        />

                    <app.cosmos.reconbike.NPTextView
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:text="09:00 ~ 14:00"
                        app:font="Custom4"
                        />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="41dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
