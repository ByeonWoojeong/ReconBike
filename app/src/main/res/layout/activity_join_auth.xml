<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        >

        <ImageView
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:id="@+id/back"
            android:background="@drawable/back_black"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <app.cosmos.reconbike.NPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="회원가입 및 간편 인증"
            android:textColor="#212121"
            android:textSize="24sp"
            app:font="Custom3" />

        <app.cosmos.reconbike.NPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="사용자의 고장 및 불편 신고의 빠른 처리를"
            android:textColor="#a5a5a5"
            android:textSize="13sp"
            app:font="Custom2" />

        <app.cosmos.reconbike.NPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="위하여 간편 인증 절차를 진행합니다."
            android:textColor="#a5a5a5"
            android:textSize="13sp"
            app:font="Custom2" />

        <app.cosmos.reconbike.NPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="* 번호는 추후 변경 가능합니다."
            android:textColor="#a5a5a5"
            android:textSize="13sp"
            app:font="Custom2" />

        <LinearLayout
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="58dp"
            android:orientation="vertical">

            <app.cosmos.reconbike.NPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="휴대폰 번호"
                android:textColor="#8c8c8c"
                android:textSize="13sp"
                app:font="Custom1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:includeFontPadding="false"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingBottom="11dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        app:font="Custom5" />

                    <TextView
                        android:id="@+id/auth_number_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="인증번호"
                        android:textColor="#f41758"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        app:font="Custom1" />

                </LinearLayout>

                <View
                    android:id="@+id/under_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#212121" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <app.cosmos.reconbike.NPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="인증번호"
                android:textColor="#8c8c8c"
                android:textSize="13sp"
                app:font="Custom1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/auth_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:includeFontPadding="false"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingBottom="11dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        app:font="Custom5" />

                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:textColor="#f41758"
                        android:textSize="13sp"
                        android:visibility="gone"
                        app:font="Custom4" />

                </LinearLayout>

                <View
                    android:id="@+id/under_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#d7d7d7" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/all_check_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="51dp"
            android:layout_marginTop="56dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all_check_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="전체동의"
                android:textColor="#212121"
                android:textSize="13sp"
                app:font="Custom4" />

            <ImageView
                android:id="@+id/all_check"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/check" />

        </LinearLayout>

        <View
            android:layout_width="257dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:background="#d7d7d7" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:background="#ffffff"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:id="@+id/check1_con"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="13dp">

                    <TextView
                        android:id="@+id/check1_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="7dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="서비스 이용약관 (필수)"
                        android:textColor="#b0b0b0"
                        android:textSize="12sp"
                        app:font="Custom4" />

                    <ImageView
                        android:id="@+id/check1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/check" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/check2_con"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/check2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="7dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="개인정보 처리방침 (필수)"
                        android:textColor="#b0b0b0"
                        android:textSize="12sp"
                        app:font="Custom4" />

                    <ImageView
                        android:id="@+id/check2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/check" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/check3_con"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/check3_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="7dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="위치기반 서비스 이용약관 (필수)"
                        android:textColor="#b0b0b0"
                        android:textSize="12sp"
                        app:font="Custom4" />

                    <ImageView
                        android:id="@+id/check3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/check" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/check4_con"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="35dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/check4_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="7dp"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="마케팅 정보 수신 (선택)"
                        android:textColor="#b0b0b0"
                        android:textSize="12sp"
                        app:font="Custom4" />

                    <ImageView
                        android:id="@+id/check4"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/check" />

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#212121"
        android:id="@+id/next_con"
        >

        <TextView
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="7dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="확인"
            android:id="@+id/next"
            app:font="Custom1"
            />

    </FrameLayout>

</LinearLayout>