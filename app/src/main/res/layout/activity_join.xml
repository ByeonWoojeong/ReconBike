<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        >

        <ImageView
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:id="@+id/back"
            android:background="@drawable/back_black"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <app.cosmos.reconbike.NPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="회원가입"
            android:textColor="#212121"
            android:textSize="24sp"
            app:font="Custom3" />

        <app.cosmos.reconbike.NPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="리콘 바이크를 사용하기 위해서"
            android:textColor="#a5a5a5"
            android:textSize="13sp"
            app:font="Custom2" />

        <app.cosmos.reconbike.NPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:text="필요한 정보를 입력해주세요."
            android:textColor="#a5a5a5"
            android:textSize="13sp"
            app:font="Custom2" />


        <LinearLayout
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="58dp"
            android:orientation="vertical">

            <app.cosmos.reconbike.NPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="아이디"
                android:textColor="#8c8c8c"
                android:textSize="13sp"
                app:font="Custom1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <EditText
                        android:id="@+id/id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:includeFontPadding="false"
                        android:inputType="textUri"
                        android:maxLines="1"
                        android:paddingBottom="11dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:maxLength="20"
                        app:font="Custom5" />

                    <TextView
                        android:id="@+id/auth_number_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:letterSpacing="-0.05"
                        android:text="중복확인"
                        android:textColor="#f41758"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        app:font="Custom1" />

                </LinearLayout>

                <View
                    android:id="@+id/under_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#d7d7d7" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <app.cosmos.reconbike.NPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:letterSpacing="-0.05"
                android:text="비밀번호"
                android:textColor="#8c8c8c"
                android:textSize="13sp"
                app:font="Custom1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:includeFontPadding="false"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingBottom="11dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:maxLength="15"
                        app:font="Custom5" />

                </LinearLayout>

                <View
                    android:id="@+id/under_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#d7d7d7" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/password_re"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:includeFontPadding="false"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingBottom="11dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="16dp"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:maxLength="15"
                        app:font="Custom5" />

                    <ImageView
                        android:id="@+id/join_ok"
                        android:background="@drawable/join_ok"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/join_x"
                        android:background="@drawable/join_x"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone" />

                </LinearLayout>

                <View
                    android:id="@+id/under_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#d7d7d7" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#212121"
        android:id="@+id/next_con"
        >

        <TextView
            android:layout_gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:letterSpacing="-0.05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="확인"
            android:id="@+id/next"
            app:font="Custom1"
            />

    </FrameLayout>

</LinearLayout>